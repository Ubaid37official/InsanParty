<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#326334"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:src="@drawable/insanlogo"
        android:layout_centerHorizontal="true"/>



    <Button
        android:id="@+id/regForm"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Registeration Form"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/roundbutton"/>

    <Button
        android:id="@+id/fbpage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Insan Party Page"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/roundbutton"/>


    <Button
        android:id="@+id/fbgroup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Insan Party Group"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/roundbutton"/>

    <Button
        android:id="@+id/form"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Membership Form"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@drawable/roundbutton"/>



</LinearLayout>