<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".user.UserRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Create User Account"
                android:textColor="#326334"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_adduser"
                android:visibility="gone" />

            <Button
                android:id="@+id/upload"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#1E88E5"
                android:text="Select Image"
                android:textColor="#ffffff"
                android:visibility="gone" />


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Full Name*"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/register_field_shape"
                android:textColorHint="#63000000"
                android:textColor="#000000"
                android:inputType="text"
                android:ems="10"
                android:layout_margin="10dp"
                />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email Address*"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/register_field_shape"
                android:textColorHint="#63000000"
                android:textColor="#000000"
                android:inputType="text"
                android:ems="10"
                android:layout_margin="10dp"
                />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Password*"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/register_field_shape"
                android:textColorHint="#63000000"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_margin="10dp"
                />



            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Phone or Whatsapp*"
                android:textColorHint="#63000000"
                android:textColor="#000000"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/register_field_shape"
                android:inputType="number"
                android:ems="10"
                android:layout_margin="10dp"
                />



            <!--        <TextView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="Select Date of Birth*"-->
            <!--            android:textColor="#ffffff"-->
            <!--            android:textSize="18sp"-->
            <!--            android:layout_margin="10dp"/>-->

            <!--        <DatePicker android:id="@+id/dateBirth"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:hint="Date of Birth*"-->
